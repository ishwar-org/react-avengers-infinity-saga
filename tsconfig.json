{
  "files": [],
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "noEmit": true,
    "jsx": "react-jsx",
    // "paths": {
    //   "@react-avengers-infinity-saga/components": ["components"],
    //   "@react-avengers-infinity-saga/types": ["types"],
    //   "@react-avengers-infinity-saga/utils": ["utils"]
    // }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "references": [{"path": "./tsconfig.node.json"}]
}
